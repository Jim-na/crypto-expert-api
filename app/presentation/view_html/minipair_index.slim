.container
    .jumbotron.text-center
        .row
            h5 This is minipair table
.container
    - if pairlist.any?
      div class="pairtable"
        table class="table table-hover pair-table" id="pairtable"
            thead
            tr
                th Minipair Symbol
                th Time
                th Volume
                th Volume Increase Percent
                th Signal
            tbody
            - pairlist.each do |pair|
                tr class="table-row pair-row" data-href="minipair/#{pair.symbol}"
                    td id='td_price'
                        span class="table_symbol" 
                        a [href = "minipair/#{pair.symbol}"] #{pair.symbol} 
                    td id='td_minipair'
                        span class="table_time"
                        = pair.time
                    td id='td_volume'
                        span class="table_volume"
                        = pair.volume_now
                    td id='td_changes'
                        span class="table_changes"
                        = pair.increase_percent
                    td id='td_signal'
                        span class="table_signal"
                        = pair.signal